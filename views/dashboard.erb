<body id="dashboard-page">

<div id="header" class="more1024">

<%= partial 'includes/utilityNav', @includes %>

<%= partial 'includes/topBar', @includes %>

</div>



<div id="content" class="content">
	
<div id="centerDashBoard">

		<div id="dashProfile">
			<div class="float-left">
				<img src="<%= "#{@user.username}/image.large?noCacheImage=#{Time.now().to_i}" %>" alt="Person's profile picture" />
			</div>
			<div id="dashProfileInfo" class="float-left">
				<h2 class="header typeB"><span><!-- This is where the name will go. --></span> <a href="/settings/account" class="dashMineOnly"><%= i18n("Edit Profile", "link on own dashboard to edit your profile information" ) %></a></h2>
				<div id="dashIsFriend"><!-- This is where the friend status will go. --></div>
				<p class="text typeC" style="max-width:600px;"><!-- This is where the bio will go. --></p>
				<ul class="services-used">
					<li id="editServicesLink"><a href="/settings/services" class="dashMineOnly" style="line-height:16px;"><%= i18n("Edit Services", "link on own dashboard to edit your connected services" ) %></a></li>
				</ul>
			</div>
			<div class="clearNoHeight">&nbsp;</div>
		</div>
		
		

		<div id="dashBoardFriends" style="float:right;width:295px;">
		<div id="dashFriends">
                <h3><%= i18n("Friends (%s)", "Header of friends list, with count, on dashboard", ["<span id='dashFriendCount'>0</span>"] ) %> <a href="#" class="sml-btn-orange float-right addFriends dashMineOnly" style="margin-top:-4px;"><%= i18n("Add Friends", "Text on button to start finding or adding friends") %></a></h3>
                <div class="dashLoading friendsLoading"><span><%= i18n("Loading", "status text when loading list on dashboard") %></span></div>
                <div class="dashFriendGroups">
                </div>
        </div>
		</div>

		<div id="dashLanesNFaves">
			<div class="dashLanes">
				<h3><%= i18n("Lanes (%s)", "Header of lane list, with count, on dashboard", ["<span id='dashLaneCount'>0</span>"] ) %></h3>
				<div class="dashLoading lanesLoading"><span><%= i18n("Loading", "status text when loading list on dashboard") %></span></div>
				<ul>
				</ul>
			</div>

			<div class="dashFaves">

				<div class="dashLoading lanesLoading"><span><%= i18n("Loading", "status text when loading list on dashboard") %></span></div>
				<h3><%= i18n("Followed Lanes (%s)", "Header of followed lanes list, with count, on dashboard", ["<span id='dashFavLaneCount'></span>"] ) %></h3>

				<ul>
				</ul>
			</div>
		</div>
        
	
</div>
	
</div>

<!-- DROPDOWNS  -->
<%= partial 'includes/topBarDropDowns', @includes %>
<%= partial 'includes/topBarSearchDropDowns', @includes %>

<!-- JavaScript at the bottom for fast page loading -->

<!-- translation from english, CAN'T be bundles, must be load before eveything -->
<script src="/lang.js"></script>

<!-- Thirdparty Scripts -->
<%= partial 'includes/jsThirdParty', @includes %>

<!-- JS for just this html page  -->
<script type="text/javascript">
	m.csrf = "<%= Rack::Csrf.csrf_token(env) %>";
	<% if current_user %>
		m.currentUser = {
			userID : "<%= current_user.id %>",
			username : "<%= current_user.username%>",
			first_name : "<%= h current_user.first_name%>",
			last_name: "<%= h current_user.last_name%>",
			image : "<%= "#{current_user.username}/image" %>",
			bio : "<%= h( current_user.bio).gsub( /\n/m, '/n').gsub("\u2028", '') %>"
		};
	<% else %>
		m.currentUser = null;
	<% end %>
        m.dashUser = <%= @user.metadata( current_user, false, true ).to_json %>;
        m.currentLanguage = '<%= session["language"] %>';
	m.fbAppID = '<%= FACEBOOK_APP_ID %>';
</script>

