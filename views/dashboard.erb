	<title><%= i18n("%s | Memolane | See, search, and share your life", "The memolane Catchphrase in the page title", [@user.full_name]) %></title>
	
	<meta name="title" content='<%= i18n("%s | Memolane | See, search, and share your life", "The memolane Catchphrase in the page title", [@user.full_name]) %>' />	
