<script type="text/javascript">
	m.csrf = "<%= Rack::Csrf.csrf_token(env) %>";
	<% if current_user %>
		m.currentUser = {
			userID : "<%= current_user.id %>",
			username : "<%= current_user.username%>",
			first_name : "<%= h current_user.first_name%>",
			last_name: "<%= h current_user.last_name%>",
			image : "<%= "#{current_user.username}/image" %>",
			bio : "<%= h( current_user.bio).gsub( /\n/m, '/n').gsub("\u2028", '') %>"
		};
	<% else %>
		m.currentUser = null;
	<% end %>
        m.currentLanguage = '<%= session["language"] %>';
	m.fbAppID = '<%= FACEBOOK_APP_ID %>';

        m.featuredLanes = <%= Memolane::Web::Discovery.get_featured_lanes(current_language) %>;
        m.mostFollowedLanes = <%= Memolane::Web::Discovery.get_most_followed_lanes() %>;
        m.recommendedLanes = <%= Memolane::Web::Discovery.get_recommended_lanes(session,current_language,current_user) %>;

        m.imageServer = '<%= IMAGE_SERVER %>';
</script>

