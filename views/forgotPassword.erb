<body id="forgotPassword">


<div id="header" class="more1024">
	<div id="top-bar">
		<h1><a href="#"><%= i18n("Memolane") %></a></h1>
	</div>
</div>


<div id="content">
	<h1 class="header typeE" style="text-align:left; font-size:16px; padding:20px 0 0 20px;"><%= i18n("Forgot Password", "Header on forgot password page") %></h1>
	
	<form action="/rest" enctype="multipart/form-data" method="POST" id="reset-form">
		<label>
			<%= i18n("Enter your Username or Email", "text on input field on forgot password page" ) %>
			<input type="text" name="usernameOrEmail" id="username-or-email" />
		</label>
		
		<div id="form-actions">
			<input type="submit" value="<%= i18n('Send It', 'Text on button to send new password to user' ) %>" class="btn-green float-right" style="font-size:13px; padding-left:18px; padding-right:18px;" />
			<div class="form-message-success display-none">
				<%= i18n("New password sent!", "notification text on password reset page" ) %>
			</div>
			<div class="form-message-error display-none">
				<%= i18n("No user with that email or username", "notification text on password reset page" ) %>
			</div>
		</div>
	</form>
	
	<p class="text typeE clear goSignIn" style="text-align:left; padding-left:30px;"><%= i18n("<span>Remember it?</span> <a href=\"login\">Go Log In</a></p>", "link on forgot password page for users who suddenly remember their password" ) %>
</div>

